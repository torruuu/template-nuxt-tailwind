{
  "editor.tabSize": 2,
  "files.eol": "\n",
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "stylelint.enable": true,
  "eslint.enable": true,
  "stylelint.validate": ["css", "vue", "tailwindcss"],
  "eslint.validate": [
    "javascript",
    "typescript",
    "vue"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  }
}
